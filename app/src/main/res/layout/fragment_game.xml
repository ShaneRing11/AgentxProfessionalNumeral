<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameFragment">

    <ImageView
        android:id="@+id/guesses"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/high_alert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bombs" />

    <ImageView
        android:id="@+id/bombs"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:src="@drawable/three_bombs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guesses" />


    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@+id/guesses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bombs"
        app:layout_constraintBottom_toTopOf="@+id/guess" />

    <EditText
        android:id="@+id/guess"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="@string/guess_hint"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="number"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bombs"
        app:layout_constraintTop_toBottomOf="@+id/guesses" />


    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/disguise"
        app:layout_constraintTop_toBottomOf="@id/guess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bombs"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>