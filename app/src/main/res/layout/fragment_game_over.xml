<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameOverFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/game_over"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/name_hint"
        android:inputType="text"
        android:maxLength="10"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        android:autofillHints="username" />

    <Button
        android:id="@+id/submit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/submit_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tweet"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/tweet_score"
        android:layout_margin="30dp"
        android:visibility="invisible"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@id/highScores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/highScores"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/high_scores"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/new_game"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScores" />

    <Button
        android:id="@+id/mainMenu"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/main_menu"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newGame" />
</androidx.constraintlayout.widget.ConstraintLayout>